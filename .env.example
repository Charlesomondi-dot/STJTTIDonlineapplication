# St Joseph's Technical Institute - Environment Variables
# Copy this file to .env and update with your actual values
# For Render: Set these as environment variables in your Render dashboard

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_USER=stjtech_user
DB_PASSWORD=your_secure_password
DB_NAME=stjtech_applications
DB_PORT=3306

# Use database for storage (set to 'true' when database is available)
USE_DATABASE=false
USE_FILE_STORAGE=true

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_DRIVER=php
# Options: 'php', 'smtp', 'sendgrid'

# SMTP Configuration (for Gmail or other SMTP services)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# Email Features
SEND_CONFIRMATION_EMAIL=true
SEND_REVIEW_NOTIFICATIONS=true
SEND_DECISION_EMAIL=true

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=production
APP_DEBUG=false
